generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid      Int         @id @default(autoincrement())
  email    String      @unique
  password String
  assets   UserAsset[]
  orders   Order[]
}

model UserAsset {
  id     Int     @id @default(autoincrement())
  user   User    @relation(fields: [userId], references: [uid])
  userId Int
  asset  String
  qty    Float
  type   String?
}

model Order {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [uid])
  userId     Int
  type       String
  asset      String
  qty        Float
  price      Float
  limitPrice Float?
  status     String    @default("open")
  isLimit    Boolean   @default(false)
  createdAt  DateTime  @default(now())
  executedAt DateTime?
}
